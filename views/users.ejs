<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link rel="stylesheet" href="../public/stylesheets/users.css"> <!-- Linking the CSS file -->
</head>
<body>
    <section> 
        <div class="container">
            <h1 class="quote-title">"Users Are Everything"</h1>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Password</th>
                        <th>Gender</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.name %></td>
                            <td><%= user.username %></td>
                            <td><%= user.mail %></td>
                            <td><%= user.mob %></td>
                            <td><%= user.password %></td>
                            <td><%= user.gender %></td>
                            <td>
                                <form action="/delete" method="POST" style="display: inline;">
                                    <input type="hidden" name="username" value="<%= user.username %>">
                                    <button type="submit" class="delete-btn">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </section>
    
    <!-- Undo button at the bottom -->
    <section>
        <div class="container">
            <form action="/undo" method="POST">
                <button type="submit" class="undo-btn">Undo</button>
            </form>
        </div>
    </section>
</body>
</html>
